import { commands, workspace } from 'vscode'

import { sanitize_ctx } from './helper/vsc.js'

const {
	registerCommand: cmd,
	registerTextEditorCommand: editor_cmd
} = commands

const { getConfiguration: config_of } = workspace

const cmds = {
	'': [ import('./cmd/.js'), cmd        ],
	'': [ import('./cmd/.js'), editor_cmd ],
}

export async function activate(ctx)
{
	const config = config_of('NAME')

	for (const id of Object.keys(cmds)) {
		const [ module_promise, cb ] = cmds[id]
		const module = await module_promise

		const cmd_ctx = sanitize_ctx(ctx)
		const exec = cb(`NAME.${id}`, module.exec, cmd_ctx)

		cmd_ctx.config = config
		ctx.subscriptions.push(exec)
	}
}
